# Set editing mode like vim
set editing-mode vi

# Makes tabbing go around possible matches
TAB: menu-complete

# Always show all possible matches if present
set show-all-if-ambiguous on

# Always show matches before starting to complete
set menu-complete-display-prefix on

# Show possible matches with LS colors
set colored-stats on

# Makes it possible to loop backwards with ctrl+tab
"\e[Z": menu-complete-backward

# Ignores completition case
set completion-ignore-case on
set skip-completed-text on

# Remove beeping sounds
set bell-style none

# When tabbing links, it adds /
set mark-symlinked-directories on
