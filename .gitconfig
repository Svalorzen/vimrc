[user]
	email = svalorzen@develer.com
	name = Eugenio Bargiacchi
[core]
	editor = gvim -f
[merge]
	tool = gvimdiff -f
[alias]
	st = status
	ci = commit
	br = branch
	co = checkout
    fe = fetch
    me = merge
    reb = rebase
    txt = ! cd ${GIT_PREFIX:-.} && git grep --cached -Il '' | xargs file | grep text | cut -d: -f1
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    ignored = !git ls-files -v | grep "^[[:lower:]]"
[mergetool]
	keepBackup = false
[push]
	default = simple
[filter "lfs"]
	required = true
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
[init]
	templatedir = ~/.git_template
